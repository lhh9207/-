<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <include
            android:id="@+id/act_write_blood_pressure_toolbar"
            layout="@layout/toolbar_back" />
        <View

            android:id="@+id/act_write_blood_pressure_toolbar_border"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#dddddd"
            app:layout_constraintTop_toBottomOf="@+id/act_write_blood_pressure_toolbar" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/act_write_blood_pressure_toolbar_border"
            app:layout_constraintBottom_toTopOf="@id/act_write_blood_pressure_cl_done">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/noto_sans_kr_regular"
                        android:text="최고 혈압을 입력해주세요"
                        android:textColor="@color/black1"
                        android:textSize="16dp" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/act_write_blood_pressure_et_max"
                            android:layout_width="0dp"
                            android:layout_height="52dp"
                            android:layout_marginHorizontal="80dp"
                            android:layout_marginTop="12dp"
                            android:background="@drawable/border_4_dddddd"
                            android:fontFamily="@font/noto_sans_kr_bold"
                            android:paddingLeft="10dp"
                            android:textAlignment="center"
                            android:textColor="@color/black1"
                            android:textSize="24dp"
                            android:inputType="number"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:text="mmHg"
                            android:textColor="@color/gray1"
                            app:layout_constraintBottom_toBottomOf="@+id/act_write_blood_pressure_et_max"
                            app:layout_constraintStart_toEndOf="@+id/act_write_blood_pressure_et_max" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/noto_sans_kr_regular"
                        android:text="최저 혈압을 입력해주세요"
                        android:textColor="@color/black1"
                        android:textSize="16dp" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/act_write_blood_pressure_et_min"
                            android:layout_width="0dp"
                            android:layout_height="52dp"
                            android:layout_marginHorizontal="80dp"
                            android:layout_marginTop="12dp"
                            android:background="@drawable/border_4_dddddd"
                            android:fontFamily="@font/noto_sans_kr_bold"
                            android:paddingLeft="10dp"
                            android:textAlignment="center"
                            android:textColor="@color/black1"
                            android:textSize="24dp"
                            android:inputType="number"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:text="mmHg"
                            android:textColor="@color/gray1"
                            app:layout_constraintBottom_toBottomOf="@+id/act_write_blood_pressure_et_min"
                            app:layout_constraintStart_toEndOf="@+id/act_write_blood_pressure_et_min" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:orientation="vertical"
                    android:layout_marginBottom="40dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/noto_sans_kr_regular"
                        android:text="맥박수를 입력해주세요"
                        android:textColor="@color/black1"
                        android:textSize="16dp" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/act_write_blood_pressure_et_pulse"
                            android:layout_width="0dp"
                            android:layout_height="52dp"
                            android:layout_marginHorizontal="80dp"
                            android:layout_marginTop="12dp"
                            android:background="@drawable/border_4_dddddd"
                            android:fontFamily="@font/noto_sans_kr_bold"
                            android:paddingLeft="10dp"
                            android:textAlignment="center"
                            android:textColor="@color/black1"
                            android:textSize="24dp"
                            android:inputType="number"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:text="bmp"
                            android:textColor="@color/gray1"
                            app:layout_constraintBottom_toBottomOf="@+id/act_write_blood_pressure_et_pulse"
                            app:layout_constraintStart_toEndOf="@+id/act_write_blood_pressure_et_pulse" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </LinearLayout>

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/act_write_blood_pressure_cl_done"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@color/gray2"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/noto_sans_kr_bold"
                android:text="입력 완료"
                android:textColor="@color/white"
                android:textSize="18dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>