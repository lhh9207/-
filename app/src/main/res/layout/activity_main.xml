<?xml version="1.0" encoding="utf-8"?>
<layout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  xmlns:app="http://schemas.android.com/apk/res-auto"
                  android:orientation="vertical"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:background="@color/white">
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="48dp">
            <TextView
                    android:id="@+id/act_main_logout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="로그아웃"
                    android:textColor="@color/gray1"
                    android:textSize="13dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginRight="12dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
<!--            <pl.pzienowicz.autoscrollviewpager.AutoScrollViewPager-->
<!--                    android:id="@+id/act_main_asvp"-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    app:layout_constraintTop_toTopOf="parent" />-->
<!--            <com.ssionii.bloodNote.util.view.CircleAnimIndicator-->
<!--                    android:id="@+id/act_main_cai"-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    app:layout_constraintBottom_toBottomOf="parent"-->
<!--                    app:layout_constraintStart_toStartOf="parent"-->
<!--                    app:layout_constraintEnd_toEndOf="parent"-->
<!--                    android:layout_marginBottom="3dp"/>-->
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
                android:id="@+id/act_main_tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/noto_sans_kr_bold"
                android:textSize="20sp"
                android:layout_marginTop="42dp"
                android:textColor="@color/black"
                android:layout_gravity="center" />

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/text_today_input"
                android:layout_marginTop="9dp"
                android:layout_gravity="center"/>

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:layout_gravity="center">
            <ImageView
                    android:id="@+id/act_main_iv_blood_sugar_input"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_blood_sugar_input"/>
            <ImageView
                    android:id="@+id/act_main_iv_blood_pressure_input"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_blood_pressure_input"/>
        </LinearLayout>

        <ImageView
                android:id="@+id/act_main_iv_my_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_my_state"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"/>
